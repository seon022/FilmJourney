
root = true

[*]
charset = utf-8
indent_style = space       # 들여쓰기: 스페이스 사용
indent_size = 2           # 들여쓰기 크기: 2칸
end_of_line = lf          # 줄바꿈: LF (Unix 스타일)
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false  # 마크다운은 공백 유지

[*.{js,jsx,ts,tsx,json,css,scss,html}]
indent_size = 2
